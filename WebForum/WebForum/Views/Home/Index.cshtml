@{ 
    Layout = null;
}
<html ng-app="webForum">
<head>
    <title>Pocetna</title>
    <link rel="stylesheet" href="../../Content/css/bootstrap.min.css" type="text/css"/>
    <link rel="stylesheet" href="../../Content/css/app.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="../../Content/css/ionicons.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-default" ng-controller="MainController">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#!/podforumi">Web Forum</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li ng-class="checkActive('/podforumi')"><a href="#!/podforumi">Podforumi</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li ng-show="!ulogovan" ng-class="checkActive('/login')"><a href="#!/login">Login</a></li>
                        <li ng-show="!ulogovan" ng-class="checkActive('/register')"><a href="#!/register">Registracija</a></li>
                        <li ng-show="ulogovan" ng-class="checkActive('/profil')"><a href="#!/profil">{{korisnik.imePrezime}}</a></li>
                        <li ng-show="ulogovan"><a href ng-click="Logout()">Logout</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div ng-view></div>
    </div>
    
    <script src="../../Scripts/js/jquery-1.10.2.min.js"></script>
    <script src="../../Scripts/js/bootstrap.min.js"></script>
    <script src="../../Scripts/js/angular.min.js"></script>
    <script src="../../Scripts/js/angular-route.min.js"></script>
    <script src="../../SPA/app.js"></script>
    <!--Controllers-->
    <script src="../../SPA/controllers/podforumi/PodforumiController.js"></script>
    <script src="../../SPA/controllers/podforumi/PodforumController.js"></script>
    <script src="../../SPA/controllers/LoginController.js"></script>
    <script src="../../SPA/controllers/MainController.js"></script>
    <!--Factories-->
    <script src="../../SPA/services/AccountFactory.js"></script>
    <script src="../../SPA/services/PodforumiFactory.js"></script>
    <!--Directives-->
    <script src="../../SPA/directives/fileUploadDirective.js"></script>
</body>

</html>